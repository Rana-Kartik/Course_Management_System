<%- include('includes/head.ejs') %>
    <body>
        <%- include('includes/nav.ejs') %>
        <!--Display the data in the table grid -->
            <main>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="home-course-title" id="title2">
                                Course list
                            </div>
                            <% if(courses.length) { %>
                                <div>
                                    <table border="2">
                                        <thead>
                                            <th>CourseName</th>
                                            <th>CourseDuration</th>
                                            <th>CourseFees</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </thead>
                                        <% for(let course of courses) { %>
                                            <tr>
                                                <td>
                                                    <%= course.coursename %>
                                                </td>
                                                <td>
                                                    <%= course.courseduration %>
                                                </td>
                                                <td>
                                                    <%= course.coursefees %>
                                                </td>
                                                <td>
                                                    <a href="/courses/edit/<%=course.id%>" class="btn btn-primary">Edit</a>
                                                </td>
                                                <td>
                                                    <a href="/courses/delete/<%=course.id%>" class="btn btn-success">Delete</a>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </table>
                                </div>
                                <% } else { %>
                                    <div> No course available </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </main>
    </body>
    </html>